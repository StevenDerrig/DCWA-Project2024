<!DOCTYPE html>
<html>

<head>
    <title>Add Student</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            line-height: 1.6;
        }

        .error-message {
            color: red;
            margin-bottom: 20px;
        }

        .error-container {
            background-color: #ffebee;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 4px;
            border: 1px solid #ffcdd2;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-group input {
            padding: 5px;
            width: 200px;
        }

        button {
            padding: 5px 10px;
        }
    </style>
</head>

<body>
    <h1>Add Student</h1>
    <!-- Display error messages -->
    <% if (errors && errors.length > 0) { %>
        <div class="error-container">
            <% errors.forEach(function(error) { %>
                <div class="error-message">
                    â€¢ <%= error %>
                </div>
            <% }); %>
        </div>
    <% } %>

            <form method="POST" action="/students/add">
                <div class="form-group">
                    <label>Student ID (4 characters):</label>
                    <input type="text" name="sid" value="<%= previousData ? previousData.sid : '' %>" maxlength="4">
                </div>

                <div class="form-group">
                    <label>Name (minimum 2 characters):</label>
                    <input type="text" name="name" value="<%= previousData ? previousData.name : '' %>">
                </div>

                <div class="form-group">
                    <label>Age (18 or older):</label>
                    <input type="number" name="age" value="<%= previousData ? previousData.age : '' %>">
                </div>

                <button type="submit">Add Student</button>
            </form>

            <p><a href="/students">Back to Students</a></p>
</body>

</html>