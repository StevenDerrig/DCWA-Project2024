<!DOCTYPE html>
<html>

<head>
    <title>Student Grades</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            line-height: 1.6;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f8f8f8;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .back-link {
            margin-top: 20px;
            display: inline-block;
            color: #3498db;
            text-decoration: none;
        }

        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <h1>Student Grades</h1>
    <!--Display grades in table form-->
    <table>
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Module Name</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            <% grades.forEach((grade)=> { %>
                <tr>
                    <td>
                        <%= grade.studentName %>
                    </td>
                    <td>
                        <%= grade.moduleName || 'No modules' %>
                    </td>
                    <td>
                        <%= grade.grade ? grade.grade + '%' : '-' %>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <a href="/" class="back-link">Back to Home</a>
</body>

</html>